#include <PRIZM.h>
PRIZM prizm;

#define rack 1
#define elbow 3
#define hand 2

void setup() { 
  prizm.PrizmBegin();
}

void loop() {

    OpHand(10); //close
    delay(200);
    prizm.setServoPosition(elbow,100);


  while (prizm.readSonicSensorCM(3) > 3 ){   // greater than 3 cm    
    Moverack(-100);  // rack moves right  
}                                                                          
  Moverack(0); // stops the rack
  prizm.setServoPosition(elbow,150);
  delay(500);
  OpHand(180); //open
  delay(200);

  
   while (prizm.readSonicSensorCM(5) > 2 ){   // greater than 2 cm    
    Moverack(100);  // rack moves left                       
}
  
  prizm.PrizmEnd();
 
}
